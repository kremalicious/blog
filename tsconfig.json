{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@config/*": [".config/*"],
      "@components/*": ["src/components/*"],
      "@features/*": ["src/features/*"],
      "@layouts/*": ["src/layouts/*"],
      "@images/*": ["src/images/*"],
      "@lib/*": ["src/lib/*"],
      "@stores/*": ["src/stores/*"],
      "@content/*": ["content/*"],
      "@test/*": ["test/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": ["src/images/components/**/*", "src/content"],
  "include": [
    "src/**/*",
    "content/**/*",
    "public/**/*",
    "scripts/**/*",
    "test/**/*",
    ".config/**/*"
  ]
}
