{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@config/*": [".config/*"],
      "@content/*": ["content/*"],
      "@test/*": ["test/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": [
    "src/content",
    "node_modules",
    "dist/",
    ".astro/",
    "coverage/",
    "test-results/"
  ],
  "include": [
    "src/**/*",
    "content/**/*",
    "public/**/*",
    "scripts/**/*",
    "test/**/*",
    ".config/**/*"
  ]
}
