{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "jsxImportSource": "react",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": [".config/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/components/layouts/*"],
      "@images/*": ["src/images/*"],
      "@lib/*": ["src/lib/*"],
      "@content/*": ["content/*"]
    }
  }
  // "exclude": ["node_modules", "public", "dist", "./**/*.js"],
  // "include": [
  //   "./**/*.ts",
  //   "./**/*.tsx",
  //   "./**/*.mjs",
  //   "./**/*.astro",
  //   "./scripts/*.ts",
  //   "./.jest/**/*"
  // ]
}
