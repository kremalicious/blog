{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "jsxImportSource": "react"
  },
  "exclude": ["node_modules", "public", "dist", "./**/*.js", "./**/*.astro"],
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.mjs",
    "./scripts/*.ts",
    "./.jest/**/*"
  ]
}
