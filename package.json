{
  "name": "@kremalicious/blog",
  "version": "5.0.0",
  "author": "Matthias Kretschmann <m@kretschmann.io>",
  "description": "Blog of Designer & Developer Matthias Kretschmann",
  "homepage": "https://kremalicious.com",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "start": "npm run prebuild && astro dev --config '.config/astro.config.ts'",
    "build": "astro build --config '.config/astro.config.ts'",
    "preview": "astro preview",
    "prebuild": "run-p --silent --continue-on-error create:icons create:redirects move:downloads",
    "test": "npm run lint && npm run vitest",
    "vitest": "vitest run --config './test/vitest.config.ts' --silent",
    "playwright": "playwright test --config './test/playwright.config.ts'",
    "playwright:ui": "npm run playwright -- --ui",
    "lint": "run-p --silent lint:js lint:css lint:md",
    "lint:js": "eslint --ignore-path .gitignore --ext .ts,.tsx,.astro,.mjs,.js,.cjs .",
    "lint:css": "stylelint --config '.config/.stylelintrc.json' 'src/**/*.css'",
    "lint:md": "markdownlint --config '.config/.markdownlint.json' './**/*.{md,markdown}' --ignore './{node_modules,public,.cache,dist,.git,coverage}/**/*'",
    "format": "prettier --ignore-path .gitignore --write '**/*.{js,jsx,ts,tsx,md,json,css}'",
    "type-check": "tsc --noEmit",
    "deploy:s3": "./scripts/deploy-s3.sh",
    "new": "ts-node --esm scripts/new/index.ts",
    "create:icons": "ts-node --esm scripts/create-icons/index.ts",
    "create:redirects": "ts-node --esm scripts/redirect-from.ts",
    "move:downloads": "ts-node --esm scripts/move-downloads.ts"
  },
  "dependencies": {
    "@astrojs/check": "^0.2.0",
    "@astrojs/react": "^3.0.0",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.0",
    "@astrojs/ts-plugin": "^1.1.3",
    "@nanostores/react": "^0.7.1",
    "@rainbow-me/rainbowkit": "^1.0.10",
    "astro": "^3.0.8",
    "date-fns": "^2.30.0",
    "dms2dec": "^1.1.0",
    "fast-exif": "^2.0.1",
    "feather-icons": "^4.29.1",
    "fraction.js": "^4.3.6",
    "framer-motion": "^10.16.1",
    "fuse.js": "^6.6.2",
    "nanostores": "^0.9.3",
    "pigeon-maps": "^0.21.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "slugify": "^1.6.6",
    "use-debounce": "^9.0.4",
    "viem": "^1.10.3",
    "wagmi": "^1.3.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.37.1",
    "@testing-library/react": "^14.0.0",
    "@types/node": "^20.5.7",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "@vitest/coverage-v8": "^0.34.3",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-testing-library": "^6.0.1",
    "front-matter": "^4.0.2",
    "glob": "^10.3.4",
    "hast-util-to-html": "^9.0.0",
    "identity-obj-proxy": "^3.0.0",
    "markdownlint-cli": "^0.35.0",
    "mdast-util-to-hast": "^13.0.2",
    "mdast-util-to-string": "^4.0.0",
    "mdast-util-toc": "^7.0.0",
    "node-iptc": "^1.0.5",
    "npm-run-all": "^4.1.5",
    "ora": "^7.0.1",
    "prettier": "^3.0.2",
    "prettier-plugin-astro": "^0.12.0",
    "stylelint": "^15.10.2",
    "stylelint-config-css-modules": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-prettier": "^4.0.2",
    "svgo": "^3.0.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "typescript-plugin-css-modules": "^5.0.1",
    "unist-util-visit": "^5.0.0",
    "vite-tsconfig-paths": "^4.2.0",
    "vitest": "^0.34.3"
  },
  "engines": {
    "node": "18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kremalicious/blog.git"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
